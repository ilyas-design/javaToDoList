<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cercle de fond -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="100dp"
                android:startColor="@color/logo_orange"
                android:endColor="@color/logo_yellow" />
        </shape>
    </item>
    
    <!-- Icône horloge en haut à gauche -->
    <item
        android:left="8dp"
        android:top="8dp"
        android:width="16dp"
        android:height="16dp">
        <bitmap
            android:src="@drawable/ic_clock"
            android:gravity="center" />
    </item>
    
    <!-- Icône calendrier en haut à droite -->
    <item
        android:right="8dp"
        android:top="8dp"
        android:width="16dp"
        android:height="16dp">
        <bitmap
            android:src="@drawable/ic_calendar"
            android:gravity="center" />
    </item>
    
    <!-- Icône horloge en bas à gauche -->
    <item
        android:left="8dp"
        android:bottom="8dp"
        android:width="16dp"
        android:height="16dp">
        <bitmap
            android:src="@drawable/ic_clock"
            android:gravity="center" />
    </item>
    
    <!-- Icône horloge en bas à droite -->
    <item
        android:right="8dp"
        android:bottom="8dp"
        android:width="16dp"
        android:height="16dp">
        <bitmap
            android:src="@drawable/ic_clock"
            android:gravity="center" />
    </item>
    
    <!-- Fusée au centre -->
    <item
        android:width="24dp"
        android:height="24dp"
        android:gravity="center">
        <bitmap
            android:src="@drawable/ic_rocket"
            android:gravity="center" />
    </item>
</layer-list>
